---
layout: layouts/base.njk
---

<div class="container">
    <div class="row text-center align-items-center border mb-3">
      <div class="col-md-6">
          <h1>{{ title }}</h1>

      </div>
      <div class="col-md-6">
          <div class="d-none d-md-block"><img class="img-fluid post-img"  src="{{ image }}" /></div>
      </div>
    </div>
  {{ content | safe }}

  <br><hr>
    <b>Tags: </b>
    {% for tag in tags %}
      {% if tag != 'post' %}
        <a href="{{ '/tags/' | url }}{{ tag | slug }}">{{ tag }}</a>
        {%- if not loop.last %}, {% endif %}
      {% endif %}
    {% endfor %}
  <br><br>
  <a href="{{ '/' | url }}">&larr; Back home</a>
</div>
